<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
<configuration>
    <settings>
        <setting name="callSettersOnNulls" value="true" />
        <setting name="defaultStatementTimeout" value="10" />
        <setting name="logImpl" value="SLF4J" />
    </settings>
    
    <environments default="null">
        <environment id="crawler">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="poolMaximumActiveConnections" value="10"/>
                <property name="poolMaximumIdleConnections" value="10"/>
                <property name="poolMaximumCheckoutTime" value="60000"/>
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://address=(protocol=tcp)(host=${db-crawler.mysqlIp})(port=${db-crawler.mysqlPort})/${db-crawler.mysqlDb}?useUnicode=yes&amp;characterEncoding=UTF-8&amp;connectTimeout=10000&amp;socketTimeout=10000" />
                <property name="username" value="${db-crawler.mysqlUserName}"/>
                <property name="password" value="${db-crawler.mysqlPassword}"/>
                <property name="poolPingQuery" value="select 1"/>
                <property name="poolPingEnabled" value="true"/>
                <property name="poolPingConnectionsNotUsedFor" value="180000"/>
            </dataSource>
        </environment>
    </environments>
</configuration>